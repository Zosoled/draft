block movie_table
	- var today = new Date()
	table#movie_table
		thead
			tr
				th Title
				th &nbsp;
				if found === true
					th Owner
					th Cost
					th Percentage
				th Release Date
				if found === true
					th Adjusted Gross
					th Efficency
				else
					th Gross
		tbody
			each movie in movies
				if found === true && winnerInfo[movie.id]
					- var adjGross = movie.gross * (winnerInfo[movie.id].percent / 100)
				else
					- var adjGross = movie.gross
				tr
					td
						a.video_link(youtube_id=movie.youtube_id, href='#') #{movie.name}
					td
						a(href=`http://www.imdb.com/title/${movie.imdb_id}/` target='_blank')
							img(src='/public/images/imdb_sm.png' width=30 height=14 border=0)
					if found == true
						if winnerInfo.hasOwnProperty(movie.id)
							td #{winnerInfo[movie.id].memberName}
							if today < draft.draft_start || draft.draft_end < today
								td #{winnerInfo[movie.id].bid}
								td #{winnerInfo[movie.id].percent}
							else
								td redacted
								td redacted
						else
							td
								i None
							td
								i N/A
							td
								i N/A
					td #{prettyDate(movie.release_date)}
					if movie.gross
						td #{adjGross}
					else
						td $0
					if found == true && movie.gross
						- var efficiency = adjGross / winnerInfo[movie.id].bid
						td #{addCommasToNumber(efficiency)}
					else if found == true
						td TBD
