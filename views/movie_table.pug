block movie_table
	- var today = new Date()
	table#movie_table
		thead
			tr
				th Title
				th &nbsp;
				if found === true
					th Owner
					th Cost
					th Percentage
				th Release Date
				if found === true
					th Adjusted Gross
					th Efficency
				else
					th Gross
		tbody
			each movie in movies
				if found == true && winnerInfo[movie._id]
					- var adjGross = movie.lastGross * (winnerInfo[movie._id].percent / 100)
				else
					- var adjGross = movie.lastGross
				tr
					td
						a.video_link(youtubeId=movie.youtubeId, href='#') #{movie.name}
					td
						a(href="http://www.imdb.com/title/" + movie.imdbId + "/" target='_blank')
							img(src='/public/images/imdb_sm.png' width=30 height=14 border=0)
					if found == true
						if winnerInfo.hasOwnProperty(movie._id)
							td #{winnerInfo[movie._id].memberName}
							if today < draft.draftStart || today > draft.draftEnd
								td #{winnerInfo[movie._id].bid}
								td #{winnerInfo[movie._id].percent}
							else
								td redacted
								td redacted
								td redacted
						else
							td
								i None
							td
								i N/A
							td
								i N/A
					td #{prettyDate(movie.releaseDate)}
					if movie.lastGross
						td $#{addCommasToNumber(adjGross)}
					else
						td $0
					if found == true && movie.lastGross
						- var eff = adjGross / winnerInfo[movie._id].bid
						td #{addCommasToNumber(eff)}
					else if found == true
						td TBD
