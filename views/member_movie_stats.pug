block member_movie_stats
    table
        thead
            th Member
            th Movies Owned
            th Remaining Bux
            if show_gross == true
                th Total Grosses
        tbody
            each member in team.member
                - var remaining = 100 - totalMemberMovies(member.movies)
                tr
                    td #{member.name}
                    td(align="right") #{member.movies.length}
                    td(align="right") $#{remaining}
                    if show_gross == true
                        td(align="right") $#{h_num(member.total_gross)}
